<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:cp="clr-namespace:ThemeEditor.Controls.ColorPicker;assembly=ThemeEditor.Controls.ColorPicker"
        xmlns:vm="clr-namespace:BestToGarbage.ViewModels;assembly=BestToGarbage"
        xmlns:model="clr-namespace:BestToGarbage.Models;assembly=BestToGarbage"
        xmlns:converters="clr-namespace:Avalonia.Markup.Xaml.Converters;assembly=Avalonia.Markup.Xaml"
        xmlns:iconPacks="https://github.com/MahApps/IconPacks.Avalonia"

        Height="600"
        Width="400"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="600"
        x:Class="BestToGarbage.Views.RankingListEditorWindow"
        x:DataType="vm:RankingListEditorWindowViewModel"
        Title="从夯到拉编辑器">
    <Window.Resources>
        <converters:ColorToBrushConverter x:Key="ColorToBrushConverter" />
    </Window.Resources>
    <Grid RowDefinitions="Auto,*" PointerPressed="InputElement_OnPointerPressed">
        <ScrollViewer Grid.Row="1"
            VerticalScrollBarVisibility="Hidden">
            <Grid Margin="20">
                <StackPanel>
                    <ItemsControl
                        Margin="0,10"
                        ItemsSource="{Binding Items }">
                        <ItemsControl.DataTemplates>
                            <DataTemplate x:DataType="model:HlModel">
                                <Button Height="60" HorizontalAlignment="Stretch">
                                    <Button.Content>
                                        <Grid ColumnDefinitions="10*,60*,20*,20*">
                                            <Border
                                                Background="{Binding HlBackground}" />
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                Margin="5,0"
                                                Grid.Column="1"
                                                Text="{Binding Tag}" />
                                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                <Button Grid.Column="2"
                                                        Command="{Binding $parent[ItemsControl].((vm:RankingListEditorWindowViewModel)DataContext).UpCommand}"
                                                        CommandParameter="{Binding .}">
                                                    <iconPacks:PackIconControl
                                                        Kind="{x:Static iconPacks:PackIconCodiconsKind.ArrowUp}"
                                                        Width="10"
                                                        Height="10" />
                                                </Button>
                                                <Button Grid.Column="2"
                                                        Command="{Binding $parent[ItemsControl].((vm:RankingListEditorWindowViewModel)DataContext).DownCommand}"
                                                        CommandParameter="{Binding .}">
                                                    <iconPacks:PackIconControl
                                                        Kind="{x:Static iconPacks:PackIconCodiconsKind.ArrowDown}"
                                                        Width="10"
                                                        Height="10" />
                                                </Button>
                                            </StackPanel>
                                            <Button Grid.Column="3"
                                                    Command="{Binding $parent[ItemsControl].((vm:RankingListEditorWindowViewModel)DataContext).DeleteCommand}"
                                                    CommandParameter="{Binding .}"
                                                    Foreground="LightCoral">
                                                删除
                                            </Button>
                                        </Grid>
                                    </Button.Content>

                                </Button>
                            </DataTemplate>
                        </ItemsControl.DataTemplates>
                    </ItemsControl>
                    <TextBlock
                        Text="添加新模型"
                        FontSize="25"
                        Margin="0,0,0,20" />
                    <Grid RowDefinitions="Auto,Auto,Auto,Auto"
                          RowSpacing="10">
                        <Grid
                            ColumnDefinitions="30*,70*">
                            <TextBlock
                                Text="标签"
                                VerticalAlignment="Top" />
                            <TextBox
                                x:Name="LabelTextBox"
                                Grid.Column="1"
                                Text="{Binding Model.Tag}"
                                HorizontalAlignment="Left" />
                        </Grid>
                        <Grid Grid.Row="1"
                              ColumnDefinitions="30*,70*">
                            <TextBlock
                                Text="背景颜色"
                                VerticalAlignment="Top" />
                            <cp:ColorPicker
                                Grid.Column="1"

                                Color="{Binding Model.HlBackground,Mode=TwoWay}" />
                        </Grid>
                        <Grid Grid.Row="2"
                              ColumnDefinitions="30*,70*">
                            <TextBlock
                                Text="文字颜色"
                                VerticalAlignment="Top" />
                            <cp:ColorPicker
                                Grid.Column="1"
                                Color="{Binding Model.HlForeground,Mode=TwoWay}" />
                        </Grid>
                        <StackPanel Grid.Row="3"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    Margin="0,20,0,0">
                            <Button
                                Command="{Binding AddCommand}"
                                Content="新增"
                                Width="80"
                                Margin="0,0,10,0" />
                            <Button
                                Command="{Binding ClearCommand}"
                                Foreground="LightCoral"
                                Content="清空"
                                Width="80" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>